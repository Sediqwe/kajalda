<h1>Recept tipus</h1>

<table>
  <thead>
    <tr>
      <th>Neve</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recept_types.each do |recept_type| %>
      <tr>
        <td><%= recept_type.name %></td>
        
        <td><%= link_to 'Módosít', edit_recept_type_path(recept_type), class:"btn btn-primary" %></td>
        <td><%= link_to 'Töröl', recept_type, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

